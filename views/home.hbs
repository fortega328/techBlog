<div>
    <h1 class="has-text-centered is-size-1">The Tech Blog</h1>
</div>
<div>
    {{#each posts as |post|}}
    <div class="column" id="blogs">
        <span class="nameDate"> Posted By:
            {{post.user.first_name}} {{post.user.last_name}} At: {{format_date post.created_at}}</span>

        <h1 id="blog-title"><strong>{{post.title}}</strong></h1>
        <p>{{post.description}}</p>
        <button class="button is-success"><a href='/public/{{post.id}}'>View this Blog</a></button>
    </div>
    {{/each}}
</div>